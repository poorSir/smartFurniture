<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zucc.smartFurniture.mapper.RecordsMapper">
    <select id="queryByUserId" parameterType="Integer" resultType="Records">
        SELECT * FROM records WHERE user_id = #{userId}
    </select>
    <insert id="add" parameterType="Records" keyProperty="id">
        INSERT INTO records (user_id,device_id,state,type,time) VALUES (#{user_id},#{device_id},#{state},#{type},#{time})
    </insert>
</mapper>